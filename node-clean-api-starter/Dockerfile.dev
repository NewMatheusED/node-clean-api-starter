FROM node:20-alpine

WORKDIR /app

# Copia apenas os arquivos de dependências primeiro (cache layer)
COPY package*.json ./

# Instala dependências
RUN npm install

# Copia o resto do código (será sobrescrito pelo volume em dev)
COPY . .

# Expõe a porta
EXPOSE 3000

# O comando será sobrescrito pelo docker-compose
CMD ["npm", "run", "dev"]
